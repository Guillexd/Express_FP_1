{{#if product}}
  <section class="card text-center">
    <div class="card-body">
      <h5 class="card-title">{{product.title}}</h5>
      <p class="card-text">Description: {{product.des}}</p>
      <p class="card-text">Price: {{product.price}}</p>
      <p class="card-text"><small class="text-muted">Category: {{product.category}}</small></p>
      <p class="card-text"><small class="text-muted">Stock: {{product.stock}}</small></p>
      {{#if product.status}}
        <p class="card-text"><small class="text-muted">Disponible</small></p>
        {{else}}
        <p class="card-text"><small class="text-muted">No disponible</small></p>
      {{/if}}
    </div>
    <img src='{{product.thumbnail}}' class="card-img-bottom" alt='{{product.title}}'>
  </section>
{{/if}}